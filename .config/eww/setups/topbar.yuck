(include "./yuck/windows/hbar.yuck")
(include "./yuck/windows/osd.yuck")
(include "./yuck/windows/powermenu.yuck")
(include "./yuck/windows/datemenu.yuck")
(include "./yuck/windows/desktop.yuck")
(include "./yuck/windows/dock.yuck")
(include "./yuck/windows/quicksettings.yuck")
(include "./yuck/windows/notifications.yuck")

(defwindow bar
    :monitor 0
    :exclusive true
    :stacking "fg"
    :geometry (geometry :width "100%"
                        :height "1%"
                        :anchor "top center")(hbar))

(defwindow osd
    :monitor 0
    :stacking "fg"
    :geometry (geometry :width "1%"
                        :height "1%"
                        :anchor "center right")(osd))

(defwindow powermenu
    :monitor 0
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "120%"
                        :anchor "center center")(powermenu))

(defwindow calendar
    :monitor 0
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "top left")(datemenu))

(defwindow quicksettings
    :monitor 0
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "top right")(quicksettings))

(defwindow desktop
    :monitor 0
    :stacking "bottom"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "bottom right")(desktop))

(defwindow dock
    :monitor 0
    :stacking "fg"
    :geometry (geometry :width  "1%"
                        :height "1%"
                        :anchor "bottom center")(dock))

(defwindow notifications-window
    :monitor 0
    :stacking "overlay"
    :geometry (geometry :width  "0%"
                        :height "0%"
                        :anchor "top center")(notifications))
