(include "./yuck/windows/vbar.yuck")
(include "./yuck/windows/desktop.yuck")

(defwindow bar
    :monitor 0
    :exclusive true
    :stacking "fg"
    :geometry (geometry :width "1%"
                        :height "100%"
                        :anchor "center left")(bar))
(defwindow desktop
    :monitor 0
    :stacking "bottom"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "bottom right")(desktop))
