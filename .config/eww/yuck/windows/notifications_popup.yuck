(defwidget notifications_popup [] (box
    :visible {arraylength(notifications.popups) > 0}
    :class "notifications-window-box"
    :orientation "v"
    :space-evenly false
    :vexpand true
    (label :text {notifications} :visible false)
    (for n in {notifications.popups}
        (notification
            :id {n.id}
            :title {n.summary}
            :body {n.body}
            :actions {n.actions}
            :image {n.image})
        )
    )
)
