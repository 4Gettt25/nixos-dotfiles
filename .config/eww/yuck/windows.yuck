(include "./yuck/bar.yuck")
(include "./yuck/osd.yuck")
(include "./yuck/powermenu.yuck")
(include "./yuck/datemenu.yuck")
(include "./yuck/desktop.yuck")
(include "./yuck/dock.yuck")
(include "./yuck/quicksettings.yuck")
(include "./yuck/notifications.yuck")

(defwindow bar
    :monitor 1
    :exclusive true
    :stacking "fg"
    :geometry (geometry :width "100%"
                        :height "1%"
                        :anchor "top center")(bar))

(defwindow osd
    :monitor 1
    :stacking "fg"
    :geometry (geometry :width "1%"
                        :height "1%"
                        :anchor "center right")(osd))

(defwindow powermenu
    :monitor 1
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "120%"
                        :anchor "center center")(powermenu))

(defwindow calendar
    :monitor 1
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "top left")(datemenu))

(defwindow quicksettings
    :monitor 1
    :stacking "fg"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "top right")(quicksettings))

(defwindow desktop
    :monitor 1
    :stacking "bottom"
    :geometry (geometry :width  "100%"
                        :height "100%"
                        :anchor "bottom right")(desktop))

(defwindow dock
    :monitor 1
    :stacking "fg"
    :geometry (geometry :width  "1%"
                        :height "1%"
                        :anchor "bottom center")(dock))

(defwindow notifications-window
    :monitor 1
    :stacking "overlay"
    :geometry (geometry :width  "0%"
                        :height "0%"
                        :anchor "top right")(notifications))